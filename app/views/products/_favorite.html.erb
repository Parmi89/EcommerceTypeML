<div id='favorite'>
  <% if @product.favorite %>
    <%= link_to t('.i_dont_like'), favorite_path(product.id), data:{
    turbo_method: :delete
     } %>
  <% else%>
    <%= link_to t('.like'), favorites_path(product_id: product.id), data:{
    turbo_method: :post
    } %>
  <% end %>
</div>  
